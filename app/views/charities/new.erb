<div id="new_charities">

<h1>Register A Charity</h1>

 <%=form_for @charity, html: {class: "form-horizontal col-xs-8 col-md-2"}, role:"form" do |f| %>

    <div class="form-group">
      <%=f.label :name, "Charity Name"%>
      <%=f.text_field :name, class:"form-control"%>
    </div>
    <div class="form-group">
      <%=f.label :tax_id, "Federal Tax ID"%>
      <%=f.text_field :tax_id, class:"form-control"%>
    </div>
    <div class="form-group">
      <%=f.label :poc, "Primary POC"%>
      <%=f.text_field :poc, class:"form-control"%>
    </div>
    <div class="form-group">
      <%=f.label :poc_email, "POC Email"%>
      <%=f.text_field :poc_email, class:"form-control"%>
    </div>
    <input type="hidden" name="status" value="unregistered"/>
    <div class="form-group">
      <%=f.submit "Submit", class:"btn btn-success", data: { disable_with: "Please Wait..." }%>
      <%= link_to "Cancel", charities_path%>
    </div>
  <%end%>



</div>