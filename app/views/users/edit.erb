<div id="edit_users">

    <h1>Update Your Profile</h1>

    <%if @user.errors.any?%>
      <p class="errors">Your updates can not be saved</p>
      <br/>
      <br/>
    <%end%>

    <%=form_for @user, html: {class: "form-horizontal col-xs-8 col-md-2"}, role:"form"  do |f|%>
      <div id="email" class="form-group">
        <%=f.label :email%><br/>
        <%=f.text_field :email, class:"form-control"%>
        <div class="errors"><%=@user.errors[:email].first if @user.errors[:email].any? %></div>
      </div>

      <div id="password" class="form-group">
        <%=f.label :password, "New Password"%><br/>
        <%=f.text_field :password, type:"password", class:"form-control"%>
        <div class="errors"><%=@user.errors[:password].first if @user.errors[:password].any? %></div>
      </div>

      <div id="profile_picture" class="form-group">
        <%=f.label :profile_picture%><br/>
        <%=f.text_field :profile_picture, class:"form-control"%>
      </div>
      <div class="form-group">
        <%=f.submit "Submit", class:"btn btn-success"%>
        <%=link_to "Cancel", user_path(kenny_loggins)%>
      </div>
    <%end%>

  </div>
