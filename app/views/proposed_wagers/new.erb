<div id="new_proposed_wagers">
  <h3>Create a Wager</h3>

  <%=form_for [@account, @proposed_wager], html: {class: "form-horizontal col-xs-8 col-md-3"}, role:"form"  do |f|%>

    <div class="form-group">
      <%=f.label :amount, "I want to bet"%><br/>
      <%=f.text_field :amount, class:"form-control", placeholder:"$ amount in $10 increments"%>
      <div class="errors">
        <%=flash[:amount] if flash[:amount]%>
      </div>

    </div>

    <div class="form-group">
      <label for="wageree_username">With:</label><br/>
      <input type="text" class="form-control" name="wageree_username" id="wageree_username" value="<%=@wageree_username%>" placeholder="username">

      <!--< %=f.label :wageree_username, "With:"%><br/>-->
      <!--< %=f.text_field :wageree_username, class:"form-control"%>-->
      <!--< %=f.collection_select :wageree_id, @list_of_users, :id, :username, {}, class:"form-control"%>-->
    </div>

    <div class="form-group">
      <%=f.label :title, "On: " %><br/>
      <%=f.text_field :title, class:"form-control", placeholder:"thing your wagering on"%>
    </div>

    <div class="form-group">
      <%=f.label :date_of_wager, "Date of Wager"%><br/>
      <%=f.date_field :date_of_wager, class:"form-control"%>
    </div>

    <div class="form-group">
      <%=f.label :details %><br/>
      <%=f.text_area :details, class:"form-control"%>
    </div>

    <div class="form-group">
      <%=f.submit "Submit", class:"btn btn-success", data: { disable_with: "Please Wait..." }%>
      <%=link_to "Cancel", user_path(kenny_loggins)%>
    </div>


  <%end%>




</div>