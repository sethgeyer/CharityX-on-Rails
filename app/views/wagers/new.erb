<div id="new_proposed_wagers">
  <h3>Create a Wager</h3>





  <%if @wager.errors.full_messages.any?%>
    <p class="errors">Your wager can not be completed</p>
    <br/>
    <br/>
  <%end%>


  <%=form_for @wager, url: user_wagers_path, html: {class: "form-horizontal col-xs-12 col-md-3"}, role:"form"  do |f|%>

    <div class="form-group">
      <%=f.label :amount, "I want to bet:"%><br/>
      <%=f.text_field :amount, class:"form-control", placeholder:"$ amount in $#{$ChipValue} increments"%>
      <div class="errors">
        <div class="errors"><%=@wager.errors[:amount].first if @wager.errors[:amount].any? %></div>

      </div>

    </div>

    <div class="form-group">
      <label for="wageree_username">With:</label><br/>
      <div class="input-group">
       <input type="text" class="form-control" name="wageree_username" id="wageree_username" value="<%=User.find(@wager.wageree_id).username if @wager.wageree_id%>">
        <span class="input-group-addon question">?</span>
      </div>
      <div class="wager-notes">
          <b>You have 3 options here:</b>
          <div class="color-notes"><b>Leave blank</b> to create a public wager that any one can accept.</div>
          <div class="plain-notes"><b>Input a registered user's username or email</b> to assign the wager to a specific person.</div>
          <div class="color-notes"><b>Put in a non-registered friend's email.</b>  Upon submission, an email will be sent to your friend asking them to join Charity-x and accept your wager.</div>
      </div>

    </div>





    <div class="form-group">
      <%=f.label :title, "That: " %><br/>
      <%=f.text_field :title, class:"form-control wager-input", placeholder:"thing your wagering on"%>
      <%= f.hidden_field :game_id, class: "game-id-container"%>
      <%= f.hidden_field :selected_winner_id, class: "selected-winner-container"%>
      <div class="errors"><%=@wager.errors[:title].first if @wager.errors[:title].any? %></div>

      <!-- Button trigger modal -->
      <div style="margin: 3px">
      or select one <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal">Find a Game</button>
      </div>
    </div>






    <div class="form-group">
      <%=f.label :date_of_wager, "Date of Wager:"%><br/>
      <%=f.text_field :date_of_wager, class:"form-control wager-date-input", id:'datetimepicker6', "data-date-format"=> "YYYY-MM-DD"%>
      <div class="errors"><%=@wager.errors[:date_of_wager].first if @wager.errors[:date_of_wager].any? %></div>
    </div>

        <script type="text/javascript">
          $(function () {
            $('#datetimepicker6').datetimepicker( {pickTime: false});
          });
        </script>


    <div class="form-group">
      <%=f.label :details, "Details:" %><br/>
      <%=f.text_area :details, class:"form-control wager-details-input"%>
    </div>

    <div class="form-group">
      <%=f.submit "Submit", class:"button button-submit", data: { disable_with: "Please Wait...", confirm: "You are about to create a wager.  Is the information correct?" }%>
      <%=link_to "Cancel", user_dashboard_path%>
    </div>


  <%end%>




  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Pick a Winner for the Sporting Event</h4>
        </div>
        <div class="modal-body">
          <% games = SportsGame.all %>
          <% games.each do |game| %>
            <% if game.week != games[games.index(game) - 1].week%>
              <br/>
              <b><%= "Week: #{game.week} "%> </b>
            <% end %>
            <div class="game-container" data-game-id="<%=game.id%>" data-game-date="<%=game.date%>" data-vs-team-id="<%=game.vs_id%>" data-home-id="<%=game.home_id%>">
              <%=link_to game.visiting_team, "" , "data-team-id" => game.vs_id %> vs.
              <%=link_to game.home_team, "", "data-team-id" => game.home_id%> on
              <div class= "game-date" style="display:inline"><%=game.date.in_time_zone("Eastern Time (US & Canada)").to_formatted_s(:long_ordinal)%> </div>
              <div> <%="Location: #{game.venue} "%></div>

              <div> <%="Forecast: #{game.temperature}, #{game.condition}" if game.temperature%></div>
              <hr/>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>



  <!--.strftime("%b %d, %Y")-->

</div>