
<h4>Enter New Password</h4>

<%=form_for @requester, html: {class: "form-horizontal col-xs-8 col-md-2"}, role:"form"  do |f|%>

  <div id="password" class="form-group">
    <label for="password">Password</label><br>
    <input id="password" name="password" type="password"><br><br>
    <input type="hidden" name="email" value="<%=@requester.email%>">
    <div class="errors"><%=@requester.errors[:password].first if @requester.errors[:password].any? %></div>
  </div>

  <div class="form-group">
    <%=f.submit "Submit", class:"btn btn-success"%>
    <%=link_to "Cancel", root_path%>
  </div>
<%end%>

