<div id="index_deposits">

  <table class="table table-bordered">
    <thead>
    <th>Amount</th>
    <th>Date</th>

    </thead>
    <tbody>
    <% @deposits.each do |deposit| %>
      <tr>
        <td>$<%= deposit.amount / 100 %></td>
        <td><%= timezone_adjusted_datetime(deposit.created_at) %></td>

      </tr>
    <% end %>
    </tbody>
  </table>

</div>