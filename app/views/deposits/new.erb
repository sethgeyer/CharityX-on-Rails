


<div id="new_deposits" class="container-fluid">

  <h3>Deposit Funds</h3>
  <p>All deposits to your account are immediately treated as tax deductible charitable contributions for the current tax year.</p>

  <%=form_for [@account, @deposit], html: {class: "form-horizontal col-xs-8 col-md-3"}, role:"form" do |f|%>
    <div class="form-group">
      <%=f.label :amount%><br/>
      <%=f.text_field :amount, class:"form-control", placeholder: "Max: $1k, $#{$ChipValue} increments"%>


      <div class="errors">
        <%=flash[:amount] if flash[:amount]%>
      </div>
    </div>



      <div class="form-group">
        <b>Credit Card Information</b>
        <%=f.label :cc_number, "Credit Card Number", class:"sr-only"%>
        <%=f.text_field :cc_number, class:"form-control", placeholder:"Credit Card Number"%>
      </div>

      <div class="form-group">
        <%=f.label :exp_date, "Exp Date", class:"sr-only"%>
        <%=f.text_field :exp_date, class:"form-control", placeholder:"Expiration Date" %>
      </div>

      <div class="form-group">
        <%=f.label :name_on_card, "Name on Card", class:"sr-only"%>
        <%=f.text_field :name_on_card, class:"form-control", placeholder:"Name on Card"%>
      </div>

      <div class="form-group">
        <%= f.radio_button :cc_type, "Visa"%>
        <%= f.label :cc_type, "Visa", value:"visa" %>
        <%= f.radio_button :cc_type, "Mastercard"%>
        <%= f.label :cc_type, "Mastercard", value:"mastercard" %>
      </div>
      <br/>

      <div class="form-group">
        <%=f.submit "Submit", class:"button button-submit", data: { disable_with: "Please Wait...", confirm: "You are about to fund your account.  Are you sure the information is correct?"}%>
        <%=link_to "Cancel", dashboard_path%>
      </div>


  <%end%>

</div>

